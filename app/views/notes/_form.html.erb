<%= form_with(model: note) do |form| %>
  <% if note.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div id="notes">
  <div class="note-container">
    <div>
      <div class="note-title">
        <strong><%= form.label :description, style: "display: block" %></strong>
      </div>
      <div class="note-description">
        <%= form.text_area :description, id: 'description' %>
      </div>
    </div>

    <%= hidden_field_tag :id, @note&.id&.presence %>
<% end %>
    <div>
      <%= link_to "Publish", notes_path, id: 'publish-note-button' %>
    </div>
  </div>
</div>
